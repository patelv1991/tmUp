<div class="m-background"></div>

<div class="m-content">
  <header class="heading">
    <strong><%= project.escape('title') %></strong><button class="close">&times;</button>
  </header>

  <form class="form-horizontal">
    <div class="form-group">
      <label for="project-title" class="col-sm-3 control-label">Project Title</label>
      <div class="col-sm-9">
        <input type="text"
               name="project[title]"
               class="form-control"
               id="project-title"
               value="<%= project.escape('title') %>"
               placeholder="Project Title">
      </div>
    </div>

    <div class="form-group">
      <label for="project-des" class="col-sm-3 control-label">Project Description</label>
      <div class="col-sm-9">
        <textarea class="form-control"
                  rows="3"
                  name="project[description]"
                  placeholder="Project Description"><%= project.escape('description') %></textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <button disabled type="submit" class="btn btn-default">Update Project</button>
      </div>
    </div>
  </form>
</div>
