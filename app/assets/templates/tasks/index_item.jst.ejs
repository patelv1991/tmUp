<td class="bs-checkbox"><input data-index="<%= task.id %>" name="btSelectItem" type="checkbox"></td>

<td data-index="<%= task.id %>" class="task-dropdown">
  <div class="dropdown">
    <button style="<%= 'background-color:' + randomColor %>" id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= assignment %>
      <!-- <span class="caret"></span> -->
    </button>
    <ul class="dropdown-menu scrollbar-menu" aria-labelledby="dLabel">
      <% workspace.workTeam().each(function (member) { %>
        <li><a><%= member.escape('fname') + " " + member.escape('lname') %></a></li>
      <% }) %>
    </ul>
  </div>
</td>

<td data-index="<%= task.id %>" class="task-calendar">
  <div class="input-group date">
    <input type="text" class="form-control date-input"><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
  </div>
</td>

<td data-index="<%= task.id %>" class="task-title editable">
  <% if (newTask || edittingTask) { %>
    <div class="container">

      <form class="form-inline">
        <div class="input-group add-on">
          <input type="text"
                 class="form-control"
                 placeholder="New Task Title"
                 value="<%= task.escape('title') %>"
                 name="task[title]"
                 id="new-task">
          <div class="input-group-btn">
            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-floppy-disk"></i></button>
          </div>
        </div>
      </form>

    </div>
  <% } else { %>
    <%= task.escape('title') %>
  <% } %>
</td>

<td class="project" data-project-id="<%= project.id %>" data-index="<%= task.id %>">
  <%= project.escape('title') %>
</td>

<td data-index="<%= task.id %>">
  <span data-index="<%= task.id %>" class="glyphicon glyphicon-trash" aria-hidden="true"></span>
</td>

<script>
  $('.input-group.date').datepicker({
    format: "mm/dd/yy",
    clearBtn: true,
    orientation: "top auto",
    autoclose: true,
    startDate: new Date,
    zIndexOffset: 10000
  });
</script>
