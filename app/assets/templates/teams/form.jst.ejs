<div class="m-background"></div>

<div class="team-member-form m-content">

  <header class="heading">
    <strong class="team-header">Manage Workspace: <%= workspace.escape('title') %></strong><button class="team-close close">&times;</button>
  </header>

  <!-- Table -->
  <table class="table table-striped">
    <thead>
      <tr class="column-names">
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
  </table>

  <form class="form-group">
    <div class="form-group" >
      <label for="work-team" class="col-sm-3 control-label">Invite Team Members</label>
      <div class="col-sm-9">
        <textarea class="form-control" rows="2" placeholder="Separate emails with commas" id="work-team" name="user[emails]"></textarea>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <button style="margin: 1pc 0" disabled type="submit" class="btn btn-default">Invite</button>
      </div>
    </div>
  </form>

</div>
